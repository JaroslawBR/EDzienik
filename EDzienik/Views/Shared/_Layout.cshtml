@using Microsoft.AspNetCore.Identity
@using EDzienik.Entities

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EDziennik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EDzienik.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap me-2"></i>EDziennik
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1 text-secondary"></i> Pulpit
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cogs me-1 text-secondary"></i> Administracja
                                </a>
                                <ul class="dropdown-menu shadow border-0" aria-labelledby="adminDropdown">
                                    <li><h6 class="dropdown-header text-uppercase small fw-bold text-gray-500">Użytkownicy</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="fas fa-users fa-fw me-2 text-primary"></i>Konta</a></li>
                                    <li><a class="dropdown-item" asp-controller="Teachers" asp-action="Index"><i class="fas fa-chalkboard-teacher fa-fw me-2 text-info"></i>Nauczyciele</a></li>
                                    <li><a class="dropdown-item" asp-controller="Students" asp-action="Index"><i class="fas fa-user-graduate fa-fw me-2 text-success"></i>Uczniowie</a></li>

                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-uppercase small fw-bold text-gray-500">Szkoła</h6></li>

                                    <li><a class="dropdown-item" asp-controller="SchoolClasses" asp-action="Index"><i class="fas fa-layer-group fa-fw me-2 text-warning"></i>Klasy</a></li>
                                    <li><a class="dropdown-item" asp-controller="Subjects" asp-action="Index"><i class="fas fa-book fa-fw me-2 text-danger"></i>Przedmioty</a></li>
                                    <li><a class="dropdown-item" asp-controller="SubjectAssignments" asp-action="Index"><i class="fas fa-link fa-fw me-2 text-secondary"></i>Przydziały</a></li>
                                    <li><a class="dropdown-item" asp-controller="ScheduleSlots" asp-action="Index"><i class="fas fa-calendar-alt fa-fw me-2 text-dark"></i>Plan Lekcji</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolEvents" asp-action="Index">
                                    <i class="fas fa-bullhorn me-1 text-secondary"></i> Wydarzenia
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ScheduleSlots" asp-action="Index">
                                    <i class="fas fa-calendar-day me-1 text-primary"></i> Mój Plan
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Grades" asp-action="Index">
                                    <i class="fas fa-pen-fancy me-1 text-success"></i> Dziennik
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SubjectAssignments" asp-action="Index">
                                    <i class="fas fa-list-ul me-1 text-secondary"></i> Moje Klasy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolClasses" asp-action="Index">
                                    <i class="fas fa-layer-group me-1 text-warning"></i> Klasy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Students" asp-action="Index">
                                    <i class="fas fa-user-graduate me-1 text-info"></i> Uczniowie
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolEvents" asp-action="Index">
                                    <i class="fas fa-bullhorn me-1 text-danger"></i> Wydarzenia
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ScheduleSlots" asp-action="Index">
                                    <i class="fas fa-clock me-1 text-success"></i> Plan Lekcji
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Grades" asp-action="Index">
                                    <i class="fas fa-star me-1 text-primary"></i> Oceny
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolEvents" asp-action="Index">
                                    <i class="fas fa-info-circle me-1 text-info"></i> Ogłoszenia
                                </a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto bg-white py-3">
        <div class="container text-center">
            &copy; 2026 - <strong>EDziennik</strong> - System zarządzania szkołą
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>