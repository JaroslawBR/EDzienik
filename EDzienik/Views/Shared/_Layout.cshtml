@using Microsoft.AspNetCore.Identity
@using EDzienik.Entities

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EDziennik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EDzienik.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EDziennik</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona Główna</a>
                        </li>

                        @* NOWA ZAKŁADKA DLA WSZYSTKICH *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Teachers" asp-action="Index">Nauczyciele</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Użytkownicy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolClasses" asp-action="Index">Klasy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Subjects" asp-action="Index">Przedmioty</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ScheduleSlots" asp-action="Index">Plan Lekcji</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolEvents" asp-action="Index">Wydarzenia</a>
                            </li>
                            @* W przypadku Admina warto dodać też link do Students, jeśli go tu nie było, 
                               ale w Twoim oryginalnym pliku go nie widziałem w sekcji Admina,
                               co potwierdza, że StudentsController był nieco 'ukryty' *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Students" asp-action="Index">Uczniowie</a>
                            </li>
                        }

                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ScheduleSlots" asp-action="Index">Mój Plan</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolClasses" asp-action="Index">Moje Klasy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Grades" asp-action="Index">Dziennik Ocen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolEvents" asp-action="Index">Wydarzenia</a>
                            </li>
                        }

                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ScheduleSlots" asp-action="Index">Plan Lekcji</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Grades" asp-action="Index">Moje Oceny</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SchoolEvents" asp-action="Index">Ogłoszenia</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - EDziennik - <a asp-area="" asp-controller="Home" asp-action="Privacy">Polityka Prywatności</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>