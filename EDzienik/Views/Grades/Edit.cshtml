@model EDzienik.Entities.Grade

@{
    ViewData["Title"] = "Edycja oceny";
    // Sprawdzamy czy użytkownik jest adminem
    bool isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edycja oceny</h1>
</div>

<div class="card shadow mb-4 border-left-warning">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-warning">Zmień szczegóły oceny</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SubjectId" class="form-label small text-uppercase fw-bold text-muted">Przedmiot</label>
                    @if (isAdmin)
                    {
                        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    }
                    else
                    {
                        @* Nauczyciel może zmienić przedmiot tylko w obrębie swoich uprawnień, ale bezpieczniej jest pokazać select z ograniczoną listą *@
                        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    }
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="StudentId" class="form-label small text-uppercase fw-bold text-muted">Uczeń</label>
                    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="Value" class="form-label fw-bold">Ocena</label>
                    <input asp-for="Value" class="form-control" type="number" min="1" max="6" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="col-md-9 mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Opis</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TeacherId" class="form-label small text-muted">Wystawił (Nauczyciel)</label>

                    @if (isAdmin)
                    {
                        @* Admin może zmienić nauczyciela *@
                        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                    }
                    else
                    {
                        @* Nauczyciel widzi swoje nazwisko, ale nie może go zmienić *@

                        @* Pole input tylko do wyświetlenia (disabled nie jest wysyłane w POST) *@
                        <input type="text" class="form-control"
                               value="@(Model.Teacher?.User?.FirstName + " " + Model.Teacher?.User?.LastName)"
                               disabled readonly />

                        @* Ukryte pole, aby przekazać ID do modelu (dla formalności walidacji) *@
                        <input type="hidden" asp-for="TeacherId" />
                    }

                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CreatedUnix" class="form-label small text-muted">Data utworzenia</label>
                    @* Konwersja Unix timestamp na czytelną datę tylko do odczytu *@
                    <input type="text" class="form-control" value="@DateTimeOffset.FromUnixTimeSeconds(Model.CreatedUnix).LocalDateTime.ToString("yyyy-MM-dd HH:mm")" readonly disabled />

                    @* Musimy przesłać oryginalny CreatedUnix z powrotem *@
                    <input type="hidden" asp-for="CreatedUnix" />
                    <span asp-validation-for="CreatedUnix" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Powrót
                </a>
                <button type="submit" class="btn btn-warning shadow-sm">
                    <i class="fas fa-save me-1"></i> Zapisz zmiany
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}