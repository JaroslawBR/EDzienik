@model EDzienik.Entities.Grade

@{
    ViewData["Title"] = "Usuń ocenę";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow border-left-danger">
            <div class="card-header bg-white text-danger py-3 border-bottom-danger">
                <h5 class="m-0 fw-bold">Cofanie oceny</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="display-4 fw-bold text-dark">@Html.DisplayFor(model => model.Value)</div>
                    <div class="text-muted">@Html.DisplayFor(model => model.Description)</div>
                </div>

                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Przedmiot:</span>
                        <strong>@Html.DisplayFor(model => model.Subject.Name)</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Uczeń:</span>
                        <strong>
                            @(Model.Student?.User != null ? $"{Model.Student.User.FirstName} {Model.Student.User.LastName}" : "Brak danych")
                        </strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Data wystawienia:</span>
                        <span>@DateTimeOffset.FromUnixTimeSeconds(Model.CreatedUnix).ToString("dd.MM.yyyy HH:mm")</span>
                    </li>
                </ul>

                <form asp-action="Delete" class="d-grid gap-2">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Usuń ocenę
                    </button>
                    <a asp-action="Index" class="btn btn-light border">Anuluj</a>
                </form>
            </div>
        </div>
    </div>
</div>