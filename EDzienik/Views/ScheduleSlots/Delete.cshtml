@model EDzienik.Entities.ScheduleSlot

@{
    ViewData["Title"] = "Usuń lekcję";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow border-left-danger">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0 fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>Potwierdzenie usunięcia</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning text-center">
                    Czy na pewno chcesz usunąć tę lekcję z planu?
                </div>

                <dl class="row mb-4">
                    <dt class="col-sm-4 text-end">Dzień:</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.DayOfWeek)</dd>

                    <dt class="col-sm-4 text-end">Przedmiot:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Subject.Name)</dd>

                    <dt class="col-sm-4 text-end">Godziny:</dt>
                    <dd class="col-sm-8 font-monospace">
                        @DateTimeOffset.FromUnixTimeSeconds(Model.StartUnix).ToString("HH:mm") -
                        @DateTimeOffset.FromUnixTimeSeconds(Model.EndUnix).ToString("HH:mm")
                    </dd>

                    <dt class="col-sm-4 text-end">Klasa:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SchoolClass.Name)</dd>

                    <dt class="col-sm-4 text-end">Sala:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Room)</dd>
                </dl>

                <hr />

                <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">
                        Anuluj
                    </a>
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="fas fa-trash me-1"></i> Usuń trwale
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>