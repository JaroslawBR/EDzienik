@model IEnumerable<EDzienik.Entities.ScheduleSlot>

@{
    ViewData["Title"] = "Plan lekcji";

    // Funkcja pomocnicza do konwersji czasu Unix na czas polski
    string GetPolishTime(long unixTime)
    {
        if (unixTime <= 0) return "--:--";

        var timeUtc = DateTimeOffset.FromUnixTimeSeconds(unixTime);

        TimeZoneInfo polishZone;
        try
        {
            // Próbujemy znaleźć strefę czasową dla Windows
            polishZone = TimeZoneInfo.FindSystemTimeZoneById("Central European Standard Time");
        }
        catch
        {
            try
            {
                // Jeśli nie ma (np. Linux/Mac), próbujemy standard IANA
                polishZone = TimeZoneInfo.FindSystemTimeZoneById("Europe/Warsaw");
            }
            catch
            {
                // Ostateczność: czas lokalny serwera (jeśli nie uda się znaleźć strefy)
                polishZone = TimeZoneInfo.Local;
            }
        }

        return TimeZoneInfo.ConvertTime(timeUtc, polishZone).ToString("HH:mm");
    }
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Plan lekcji</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Dodaj lekcję
        </a>
    }
</div>

@if (User.IsInRole("Admin"))
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtrowanie</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Klasa</label>
                    <select name="schoolClassId" class="form-control" asp-items="ViewBag.SchoolClassId">
                        <option value="">-- Wszystkie --</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Nauczyciel</label>
                    <select name="teacherId" class="form-control" asp-items="ViewBag.TeacherId">
                        <option value="">-- Wszyscy --</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">Filtruj</button>
                </div>
            </form>
        </div>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Dzień</th>
                        <th>Godziny</th>
                        <th>Przedmiot</th>
                        <th>Klasa</th>
                        <th>Sala</th>
                        <th>Nauczyciel</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Akcje</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">
                                @switch (item.DayOfWeek)
                                {
                                    case DayOfWeek.Monday:
                                        <span class="text-primary">Poniedziałek</span>
                                        ; break;
                                    case DayOfWeek.Tuesday:

                                        <span class="text-primary">Wtorek</span>
                                        ; break;
                                    case DayOfWeek.Wednesday:

                                        <span class="text-primary">Środa</span>
                                        ; break;
                                    case DayOfWeek.Thursday:

                                        <span class="text-primary">Czwartek</span>
                                        ; break;
                                    case DayOfWeek.Friday:

                                        <span class="text-primary">Piątek</span>
                                        ; break;
                                    case DayOfWeek.Saturday:

                                        <span class="text-danger">Sobota</span>
                                        ; break;
                                    case DayOfWeek.Sunday:

                                        <span class="text-danger">Niedziela</span>
                                        ; break;
                                    default:

                                        @item.DayOfWeek
                                        ; break;
                                }
                            </td>
                            <td>
                                @* UŻYCIE POPRAWIONEJ FUNKCJI *@
                                @GetPolishTime(item.StartUnix) – @GetPolishTime(item.EndUnix)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SchoolClass.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room)
                            </td>
                            <td>
                                @if (item.Teacher?.User != null)
                                {
                                    @($"{item.Teacher.User.LastName} {item.Teacher.User.FirstName}")
                                }
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>