@model EDzienik.Entities.ScheduleSlot

@{
    ViewData["Title"] = "Edycja lekcji";

    // LOGIKA WIDOKU: Konwersja surowych timestampów na format godziny "HH:mm" dla inputów
    string startVal = "";
    string endVal = "";
    try
    {
        // Pobieramy czas lokalny z timestampa, aby wyświetlić poprawną godzinę w formularzu
        if (Model.StartUnix > 0)
            startVal = DateTimeOffset.FromUnixTimeSeconds(Model.StartUnix).LocalDateTime.ToString("HH:mm");

        if (Model.EndUnix > 0)
            endVal = DateTimeOffset.FromUnixTimeSeconds(Model.EndUnix).LocalDateTime.ToString("HH:mm");
    }
    catch { }
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edycja lekcji</h1>
</div>

<div class="card shadow mb-4 border-left-warning">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-warning">Zmiana parametrów zajęć</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="editSlotForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="StartUnix" id="StartUnixHidden" />
            <input type="hidden" asp-for="EndUnix" id="EndUnixHidden" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DayOfWeek" class="form-label fw-bold">Dzień tygodnia</label>
                    <select asp-for="DayOfWeek" class="form-control">
                        <option value="Monday">Poniedziałek</option>
                        <option value="Tuesday">Wtorek</option>
                        <option value="Wednesday">Środa</option>
                        <option value="Thursday">Czwartek</option>
                        <option value="Friday">Piątek</option>
                        <option value="Saturday">Sobota</option>
                        <option value="Sunday">Niedziela</option>
                    </select>
                    <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Room" class="form-label fw-bold">Sala</label>
                    <input asp-for="Room" class="form-control" />
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Godzina rozpoczęcia</label>
                    <input type="time" class="form-control" id="startTimeDisplay" value="@startVal" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Godzina zakończenia</label>
                    <input type="time" class="form-control" id="endTimeDisplay" value="@endVal" required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SubjectId" class="form-label fw-bold">Przedmiot</label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SchoolClassId" class="form-label fw-bold">Klasa</label>
                    <select asp-for="SchoolClassId" class="form-control" asp-items="ViewBag.SchoolClassId"></select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="TeacherId" class="form-label fw-bold">Nauczyciel</label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Powrót
                </a>
                <button type="submit" class="btn btn-warning shadow-sm">
                    <i class="fas fa-save me-1"></i> Zapisz zmiany
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // SKRYPT WIDOKU:
        // Przy wysyłaniu formularza bierze godziny z inputów "time",
        // zamienia je na Timestamp Unix (dla dzisiejszej daty) i wpisuje w ukryte pola.
        // Dzięki temu kontroler dostaje to, czego oczekuje (long), a użytkownik widzi godziny.

        document.getElementById('editSlotForm').addEventListener('submit', function (e) {
            const startStr = document.getElementById('startTimeDisplay').value;
            const endStr = document.getElementById('endTimeDisplay').value;

            if (startStr) {
                document.getElementById('StartUnixHidden').value = timeToUnix(startStr);
            }
            if (endStr) {
                document.getElementById('EndUnixHidden').value = timeToUnix(endStr);
            }
        });

        function timeToUnix(timeStr) {
            const date = new Date(); // dzisiejsza data (tak samo działa Create)
            const [hours, minutes] = timeStr.split(':');
            date.setHours(hours, minutes, 0, 0);
            return Math.floor(date.getTime() / 1000);
        }
    </script>
}