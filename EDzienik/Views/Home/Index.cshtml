@using Microsoft.AspNetCore.Identity
@using EDzienik.Entities

@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Panel Główny";

    string displayName = User.Identity.Name;
    if (User.Identity.IsAuthenticated)
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            displayName = $"{user.FirstName} {user.LastName}";
        }
    }
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="text-gray-800 fw-bold">Witaj, @displayName!</h2>
        <p class="text-muted mb-0">To jest Twoje centrum zarządzania szkołą.</p>
    </div>
    <div class="d-none d-md-block">
        <span class="badge bg-white text-dark border shadow-sm fs-6 px-3 py-2">
            @if (User.IsInRole("Admin"))
            {
                <span><i class="fas fa-user-shield me-2 text-danger"></i>Administrator</span>
            }
            @if (User.IsInRole("Teacher"))
            {
                <span><i class="fas fa-chalkboard-teacher me-2 text-primary"></i>Nauczyciel</span>
            }
            @if (User.IsInRole("Student"))
            {
                <span><i class="fas fa-user-graduate me-2 text-success"></i>Uczeń</span>
            }
        </span>
    </div>
</div>

@* =========================================
   SEKCJA ADMINISTRATORA
   ========================================= *@
@if (User.IsInRole("Admin"))
{
    <h5 class="mb-3 text-gray-800 border-bottom pb-2"><i class="fas fa-users-cog me-2"></i>Zarządzanie Osobami</h5>
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2" style="border-left: 4px solid var(--primary-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Konta Systemowe</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Użytkownicy</div>
                            <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-primary mt-2 shadow-sm">Zarządzaj kontami</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2" style="border-left: 4px solid var(--info-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Kadra</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Nauczyciele</div>
                            <a asp-controller="Teachers" asp-action="Index" class="btn btn-sm btn-info text-white mt-2 shadow-sm">Lista nauczycieli</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2" style="border-left: 4px solid var(--success-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Edukacja</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Uczniowie</div>
                            <a asp-controller="Students" asp-action="Index" class="btn btn-sm btn-success mt-2 shadow-sm">Lista uczniów</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h5 class="mb-3 text-gray-800 border-bottom pb-2"><i class="fas fa-school me-2"></i>Organizacja Szkoły</h5>
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2" style="border-left: 4px solid var(--warning-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Struktura</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Klasy / Oddziały</div>
                            <a asp-controller="SchoolClasses" asp-action="Index" class="btn btn-sm btn-outline-warning text-dark mt-2">Przejdź</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-layer-group fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2" style="border-left: 4px solid var(--danger-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Lekcje</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Przedmioty</div>
                            <a asp-controller="Subjects" asp-action="Index" class="btn btn-sm btn-outline-danger mt-2">Przejdź</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-secondary shadow h-100 py-2" style="border-left: 4px solid #858796;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">Organizacja</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Przydziały</div>
                            <a asp-controller="SubjectAssignments" asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">Kto czego uczy</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-link fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-dark shadow h-100 py-2" style="border-left: 4px solid #5a5c69;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">Kalendarz</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Plan Lekcji</div>
                            <a asp-controller="ScheduleSlots" asp-action="Index" class="btn btn-sm btn-outline-dark mt-2">Edytuj plan</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <a asp-controller="SchoolEvents" asp-action="Index" class="card border-bottom-danger shadow h-100 py-3 text-decoration-none" style="border-bottom: 4px solid var(--danger-color);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="font-weight-bold text-danger mb-1">Wydarzenia Szkolne i Ogłoszenia</h5>
                        <p class="mb-0 text-muted">Zarządzaj apelami, egzaminami i świętami szkolnymi.</p>
                    </div>
                    <i class="fas fa-bullhorn fa-3x text-gray-300"></i>
                </div>
            </a>
        </div>
    </div>
}

@* =========================================
   SEKCJA NAUCZYCIELA
   ========================================= *@
@if (User.IsInRole("Teacher"))
{
    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <div class="mb-3 text-success bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-pen-fancy fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Dziennik Ocen</h5>
                    <p class="text-muted small">Wystawiaj oceny, edytuj wpisy i przeglądaj wyniki uczniów.</p>
                    <a asp-controller="Grades" asp-action="Index" class="btn btn-success w-100 rounded-pill">Otwórz Dziennik</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-calendar-day fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Mój Plan Lekcji</h5>
                    <p class="text-muted small">Sprawdź gdzie i z kim masz dzisiaj zajęcia.</p>
                    <a asp-controller="ScheduleSlots" asp-action="Index" class="btn btn-primary w-100 rounded-pill">Zobacz Plan</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <div class="mb-3 text-danger bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-bullhorn fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Wydarzenia</h5>
                    <p class="text-muted small">Dodaj ogłoszenie, zaplanuj sprawdzian lub wycieczkę.</p>
                    <a asp-controller="SchoolEvents" asp-action="Index" class="btn btn-danger w-100 rounded-pill">Kalendarz</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <div class="mb-3 text-secondary bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-list-ul fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Moje Klasy</h5>
                    <p class="text-muted small">Zobacz listę przedmiotów i klas, których uczysz.</p>
                    <a asp-controller="SubjectAssignments" asp-action="Index" class="btn btn-secondary w-100 rounded-pill">Sprawdź</a>
                </div>
            </div>
        </div>

        @* --- NOWY ELEMENT (BAZA KLAS) --- *@
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center hover-card">
                <div class="card-body p-4">
                    <div class="mb-3 text-warning bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-layer-group fa-2x"></i>
                    </div>
                    <h5 class="fw-bold">Baza Klas</h5>
                    <p class="text-muted small">Przeglądaj listę wszystkich klas w szkole.</p>
                    <a asp-controller="SchoolClasses" asp-action="Index" class="btn btn-warning w-100 rounded-pill text-white">Zobacz Klasy</a>
                </div>
            </div>
        </div>
    </div>
}

@* =========================================
   SEKCJA UCZNIA
   ========================================= *@
@if (User.IsInRole("Student"))
{
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-gradient-primary text-white shadow h-100" style="background: linear-gradient(45deg, #4e73df, #224abe);">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="fas fa-star fa-3x opacity-50"></i>
                            <span class="badge bg-white text-primary rounded-pill px-3">Wyniki</span>
                        </div>
                        <h3 class="fw-bold mb-1">Moje Oceny</h3>
                        <p class="opacity-75">Sprawdź swoje postępy w nauce.</p>
                    </div>
                    <a asp-controller="Grades" asp-action="Index" class="btn btn-light text-primary fw-bold w-100 mt-3 stretched-link">Pokaż oceny</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-gradient-success text-white shadow h-100" style="background: linear-gradient(45deg, #1cc88a, #13855c);">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="fas fa-clock fa-3x opacity-50"></i>
                            <span class="badge bg-white text-success rounded-pill px-3">Zajęcia</span>
                        </div>
                        <h3 class="fw-bold mb-1">Plan Lekcji</h3>
                        <p class="opacity-75">Sprawdź, jakie masz dziś lekcje.</p>
                    </div>
                    <a asp-controller="ScheduleSlots" asp-action="Index" class="btn btn-light text-success fw-bold w-100 mt-3 stretched-link">Pokaż plan</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-gradient-info text-white shadow h-100" style="background: linear-gradient(45deg, #36b9cc, #258391);">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="fas fa-bullhorn fa-3x opacity-50"></i>
                            <span class="badge bg-white text-info rounded-pill px-3">Info</span>
                        </div>
                        <h3 class="fw-bold mb-1">Wydarzenia</h3>
                        <p class="opacity-75">Sprawdziany, ogłoszenia i apele.</p>
                    </div>
                    <a asp-controller="SchoolEvents" asp-action="Index" class="btn btn-light text-info fw-bold w-100 mt-3 stretched-link">Kalendarz</a>
                </div>
            </div>
        </div>
    </div>
}