@using Microsoft.AspNetCore.Identity
@using EDzienik.Entities

@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Strona Główna";

    string displayName = User.Identity.Name;

    // Próba pobrania pełnego imienia i nazwiska
    if (User.Identity.IsAuthenticated)
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            displayName = $"{user.FirstName} {user.LastName}";
        }
    }
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="text-gray-800 fw-bold">Witaj, @displayName!</h2>
        <p class="text-muted mb-0">Twoje centrum zarządzania.</p>
    </div>
    <div class="d-none d-md-block">
        <span class="badge bg-primary fs-6 shadow-sm">
            @if (User.IsInRole("Admin"))
            {
                <span><i class="fas fa-user-shield me-1"></i> Administrator</span>
            }
            @if (User.IsInRole("Teacher"))
            {
                <span><i class="fas fa-chalkboard-teacher me-1"></i> Nauczyciel</span>
            }
            @if (User.IsInRole("Student"))
            {
                <span><i class="fas fa-user-graduate me-1"></i> Uczeń</span>
            }
        </span>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary h-100 py-2 border-0 shadow-sm" style="border-left: 4px solid var(--primary-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Użytkownicy</div>
                            <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">Zarządzaj</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300 widget-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success h-100 py-2 border-0 shadow-sm" style="border-left: 4px solid var(--success-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Plan Lekcji</div>
                            <a asp-controller="ScheduleSlots" asp-action="Index" class="btn btn-sm btn-outline-success mt-2">Edytuj plan</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-plus fa-2x text-gray-300 widget-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info h-100 py-2 border-0 shadow-sm" style="border-left: 4px solid var(--info-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Klasy</div>
                            <a asp-controller="SchoolClasses" asp-action="Index" class="btn btn-sm btn-outline-info mt-2">Lista klas</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-layer-group fa-2x text-gray-300 widget-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning h-100 py-2 border-0 shadow-sm" style="border-left: 4px solid var(--warning-color);">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Przedmioty</div>
                            <a asp-controller="Subjects" asp-action="Index" class="btn btn-sm btn-outline-warning mt-2">Lista</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300 widget-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (User.IsInRole("Teacher"))
{
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-primary bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-calendar-day fa-2x"></i>
                    </div>
                    <h4 class="card-title fw-bold">Mój Plan</h4>
                    <p class="card-text text-muted small mb-4">Sprawdź swoje zajęcia na dzisiaj i cały tydzień.</p>
                    <a asp-controller="ScheduleSlots" asp-action="Index" class="btn btn-primary w-100">Zobacz Plan</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-success bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-pen-fancy fa-2x"></i>
                    </div>
                    <h4 class="card-title fw-bold">Dziennik Ocen</h4>
                    <p class="card-text text-muted small mb-4">Wystawiaj oceny i sprawdzaj postępy uczniów.</p>
                    <a asp-controller="Grades" asp-action="Index" class="btn btn-success w-100">Otwórz Dziennik</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-info bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-bullhorn fa-2x"></i>
                    </div>
                    <h4 class="card-title fw-bold">Wydarzenia</h4>
                    <p class="card-text text-muted small mb-4">Zarządzaj wydarzeniami szkolnymi i ogłoszeniami.</p>
                    <a asp-controller="SchoolEvents" asp-action="Index" class="btn btn-info text-white w-100">Przejdź</a>
                </div>
            </div>
        </div>
    </div>
}

@if (User.IsInRole("Student"))
{
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <i class="fas fa-star fa-3x opacity-50"></i>
                        <span class="badge bg-white text-primary rounded-pill">Ostatnia aktywność</span>
                    </div>
                    <h3 class="font-weight-bold mb-1">Moje Oceny</h3>
                    <p class="opacity-75 mb-4">Sprawdź swoje ostatnie wyniki i średnią.</p>
                    <a asp-controller="Grades" asp-action="Index" class="btn btn-light text-primary fw-bold w-100 stretched-link">Pokaż oceny</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                        <span class="badge bg-white text-success rounded-pill">Plan zajęć</span>
                    </div>
                    <h3 class="font-weight-bold mb-1">Plan Lekcji</h3>
                    <p class="opacity-75 mb-4">Zobacz gdzie masz teraz zajęcia i co czeka Cię jutro.</p>
                    <a asp-controller="ScheduleSlots" asp-action="Index" class="btn btn-light text-success fw-bold w-100 stretched-link">Pokaż plan</a>
                </div>
            </div>
        </div>
    </div>
}