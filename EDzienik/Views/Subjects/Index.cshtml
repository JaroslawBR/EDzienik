@model IEnumerable<EDzienik.Entities.Subject>

@{
    ViewData["Title"] = "Przedmioty";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Przedmioty</h1>
    <a asp-action="Create" class="btn btn-warning text-dark shadow-sm">
        <i class="fas fa-plus fa-sm text-dark-50 me-1"></i> Dodaj przedmiot
    </a>
</div>

<div class="card shadow mb-4 border-left-warning" style="border-left: 4px solid var(--warning-color);">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-warning">Lista Przedmiotów</h6>
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 70%">Nazwa Przedmiotu</th>
                    <th class="text-end">Opcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class="fas fa-book text-gray-400 me-2"></i>
                            <span class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-pen"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-info"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-times"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
