@model EDzienik.Entities.Subject

@{
    ViewData["Title"] = "Usuń przedmiot";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow border-left-danger">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0 fw-bold"><i class="fas fa-trash-alt me-2"></i>Usuwanie przedmiotu</h5>
            </div>
            <div class="card-body">
                <h4 class="text-center mb-4">@Html.DisplayFor(model => model.Name)</h4>

                <div class="alert alert-danger text-center">
                    <i class="fas fa-exclamation-circle fa-2x mb-2 d-block"></i>
                    Czy na pewno chcesz usunąć ten przedmiot? <br />
                    <small>Ta operacja może wpłynąć na plan lekcji i oceny!</small>
                </div>

                <form asp-action="Delete" class="d-flex justify-content-center mt-4 gap-2">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
                    <button type="submit" class="btn btn-danger">Usuń przedmiot</button>
                </form>
            </div>
        </div>
    </div>
</div>