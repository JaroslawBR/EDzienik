@model EDzienik.Entities.Subject

@{
    ViewData["Title"] = "Dodaj przedmiot";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dodaj przedmiot</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow mb-4 border-left-warning">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">Dane nowego przedmiotu</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-bold">Nazwa przedmiotu</label>
                        <input asp-for="Name" class="form-control" placeholder="np. Matematyka" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i> Powrót
                        </a>
                        <button type="submit" class="btn btn-warning shadow-sm text-dark">
                            <i class="fas fa-plus me-1"></i> Utwórz
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}