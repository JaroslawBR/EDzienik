@model IEnumerable<EDzienik.Entities.SchoolEvent>
@using EDzienik.Entities

@{
    ViewData["Title"] = "Wydarzenia";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Wydarzenia Szkolne</h1>
    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
    {
        <a asp-action="Create" class="btn btn-danger shadow-sm">
            <i class="fas fa-calendar-plus fa-sm text-white-50 me-1"></i> Dodaj wydarzenie
        </a>
    }
</div>

<div class="card shadow mb-4 border-left-danger">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Nadchodzące wydarzenia</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tytuł / Treść</th>
                        <th>Data</th>
                        <th>Typ</th>
                        <th>Dla kogo</th>
                        <th class="text-end">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold text-dark">@item.Title</div>
                                <small class="text-muted text-truncate d-block" style="max-width: 300px;">
                                    @item.Content
                                </small>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-bold">@item.Date.ToString("dd.MM.yyyy")</span>
                                    <span class="small text-muted">@item.Date.ToString("HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                @* Logika kolorów badge'y *@
                                @{
                                    var badgeClass = item.Type switch
                                    {
                                        EventType.Exam => "bg-danger",
                                        EventType.Homework => "bg-warning text-dark",
                                        _ => "bg-info text-dark"
                                    };
                                }
                                <span class="badge @badgeClass">
                                    @Html.DisplayFor(modelItem => item.Type)
                                </span>
                            </td>
                            <td>
                                @if (item.SchoolClass != null)
                                {
                                    <span class="badge bg-secondary">Klasa @item.SchoolClass.Name</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">Cała szkoła</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edytuj">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @* USUNIĘTO PRZYCISK DETAILS *@

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Usuń">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>