@model EDzienik.Entities.SchoolEvent

@{
    ViewData["Title"] = "Usuń wydarzenie";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow border-left-danger">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0 fw-bold">Odwołaj wydarzenie</h5>
            </div>
            <div class="card-body">
                <h3 class="card-title text-dark">@Html.DisplayFor(model => model.Title)</h3>
                <h6 class="card-subtitle mb-3 text-muted">
                    <i class="far fa-calendar-alt me-1"></i> @Html.DisplayFor(model => model.Date)
                </h6>

                <p class="card-text bg-light p-3 rounded border">
                    @Html.DisplayFor(model => model.Content)
                </p>

                <div class="alert alert-warning">
                    Czy na pewno chcesz usunąć to wydarzenie z kalendarza szkolnego?
                </div>

                <form asp-action="Delete" class="text-end">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary me-2">Anuluj</a>
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="fas fa-trash-alt me-1"></i> Usuń wydarzenie
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>