@model IEnumerable<EDzienik.Entities.SubjectAssignment>

@{
    ViewData["Title"] = "Przydziały";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Przydziały (Kto czego uczy)</h1>
    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-secondary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Nowy przydział
        </a>
    }
</div>

<div class="card shadow mb-4 border-left-secondary" style="border-left: 4px solid #858796;">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-secondary">Lista Przydziałów</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Klasa</th>
                        <th>Przedmiot</th>
                        <th>Nauczyciel</th>
                        @if (isAdmin)
                        {
                            <th class="text-end">Akcje</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @(item.SchoolClass != null ? item.SchoolClass.Name : "Brak danych")
                                </span>
                            </td>
                            <td class="fw-bold text-dark">
                                @(item.Subject != null ? item.Subject.Name : "Brak danych")
                            </td>
                            <td>
                                @if (item.Teacher != null && item.Teacher.User != null)
                                {
                                    <i class="fas fa-user-tie text-muted me-1"></i>
                                    @($"{item.Teacher.User.LastName} {item.Teacher.User.FirstName}")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            @if (isAdmin)
                            {
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Edytuj">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Usuń">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>