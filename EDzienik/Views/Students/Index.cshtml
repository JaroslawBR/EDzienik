@model IEnumerable<EDzienik.Entities.Student>

@{
    ViewData["Title"] = "Lista Uczniów";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Uczniowie</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-user-plus fa-sm text-white-50 me-1"></i> Dodaj ucznia
    </a>
</div>

<div class="card shadow mb-4 border-left-info" style="border-left: 4px solid var(--info-color);">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">Baza Uczniów</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Uczeń</th>
                        <th>Kontakt</th>
                        <th>Klasa</th>
                        <th class="text-end">Zarządzanie</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 45px; height: 45px; font-size: 1.2rem;">
                                        <i class="fas fa-user-graduate"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)</div>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="text-muted"><i class="fas fa-envelope me-2 text-gray-400"></i>@Html.DisplayFor(modelItem => item.User.Email)</div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                                    <i class="fas fa-layer-group text-info me-1"></i>
                                    @Html.DisplayFor(modelItem => item.SchoolClass.Name)
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary shadow-sm">
                                    <i class="fas fa-pen"></i> Edytuj
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary shadow-sm ms-1">
                                    Profil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>