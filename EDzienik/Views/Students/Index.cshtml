@model IEnumerable<EDzienik.Entities.Student>

@{
    ViewData["Title"] = "Lista Uczniów";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Uczniowie</h1>
    @if (User.IsInRole("Admin"))
    {
        @* ZMIANA: Przycisk kieruje teraz do akcji Assign *@
        <a asp-action="Assign" class="btn btn-primary shadow-sm">
            <i class="fas fa-user-plus fa-sm text-white-50 me-1"></i> Przypisz uczniów do klasy
        </a>
    }
</div>

<div class="card shadow mb-4 border-left-info">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">Baza Uczniów</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Uczeń</th>
                        <th>Kontakt</th>
                        <th>Klasa</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th class="text-end">Opcje</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 40px; height: 40px;">
                                        <i class="fas fa-user-graduate"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">
                                            @if (item.User != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)
                                            }
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="text-muted small">
                                    @if (item.User != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.User.Email)
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                                    <i class="fas fa-layer-group text-info me-1"></i>
                                    @Html.DisplayFor(modelItem => item.SchoolClass.Name)
                                </span>
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td class="text-end">
                                    @* ZMIANA: Przycisk Zarządzaj *@
                                    <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning shadow-sm">
                                        <i class="fas fa-cog me-1"></i> Zarządzaj
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>