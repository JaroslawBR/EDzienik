@model EDzienik.Entities.SchoolClass

@{
    ViewData["Title"] = "Utwórz klasę";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Utwórz nową klasę</h1>
</div>

<div class="card shadow mb-4 border-left-info">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">Dane klasy</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label small text-uppercase fw-bold text-muted">Nazwa klasy</label>
                    <input asp-for="Name" class="form-control" placeholder="np. 1A" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="SchoolYear" class="form-label small text-uppercase fw-bold text-muted">Rok szkolny</label>
                    <input asp-for="SchoolYear" class="form-control" placeholder="np. 2025" type="number" />
                    <span asp-validation-for="SchoolYear" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Powrót
                </a>
                <button type="submit" class="btn btn-info text-white shadow-sm">
                    <i class="fas fa-plus me-1"></i> Utwórz
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}