@model EDzienik.Entities.SchoolClass

@{
    ViewData["Title"] = "Usuń klasę";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow border-left-danger">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0 fw-bold">Usuwanie Klasy</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 text-end">Nazwa klasy:</dt>
                    <dd class="col-sm-8 fw-bold fs-5">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4 text-end">Rok szkolny:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SchoolYear)</dd>
                </dl>

                <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    Usunięcie klasy spowoduje odpięcie od niej wszystkich uczniów!
                </div>

                <form asp-action="Delete" class="text-end mt-4">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary me-2">Powrót</a>
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="fas fa-trash me-1"></i> Potwierdź usunięcie
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>