@model EDzienik.Entities.Teacher

@{
    ViewData["Title"] = "Dodaj nauczyciela";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dodaj nauczyciela</h1>
</div>

<div class="card shadow mb-4 border-left-primary">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Mianuj użytkownika nauczycielem</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-4">
                <label class="form-label small text-uppercase fw-bold text-muted">Użytkownik</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-user-tie text-gray-400"></i></span>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Powrót
                </a>
                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="fas fa-plus me-1"></i> Dodaj nauczyciela
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}