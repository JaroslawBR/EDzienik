@model EDzienik.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Utwórz użytkownika";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Utwórz nowe konto</h1>
</div>

<div class="card shadow mb-4 border-left-primary">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Dane logowania i personalne</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold">Imię</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label fw-bold">Nazwisko</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Adres Email (Login)</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Hasło</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-bold">Rola w systemie</label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                    <option value=""></option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i> Powrót
                </a>
                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="fas fa-save me-1"></i> Utwórz konto
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}